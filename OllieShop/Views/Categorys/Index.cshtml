@model IEnumerable<OllieShop.Models.Categorys>

@{
    ViewData["Title"] = "商品類別";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">新增類別</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AD)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AD.ADID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CYID">編輯</a> |
                <a asp-action="Details" asp-route-id="@item.CYID">完整內容</a> |
                <a asp-action="Delete" asp-route-id="@item.CYID">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
