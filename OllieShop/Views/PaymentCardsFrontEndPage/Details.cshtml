@model OllieShop.Models.PaymentCards

@{
    ViewData["Title"] = "卡片資料";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-column">
    <h1>@ViewData["Title"]</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ExpiryDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.SecurityCode)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.SecurityCode)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Number)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Number)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.BillAddress)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.BillAddress)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.PCID">編輯</a> |
        <a asp-action="Index" asp-route-CRID="@Model?.CRID">回到信用卡總覽</a>
    </div>
</div>