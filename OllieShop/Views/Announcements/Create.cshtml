@model OllieShop.Models.Announcements

@{
    ViewData["Title"] = "公告發布頁";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublicDate" class="control-label"></label>
                <input asp-for="PublicDate" class="form-control" />
                <span asp-validation-for="PublicDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ATContent" class="control-label"></label>
                <textarea asp-for="ATContent" class="form-control"></textarea>
                <span asp-validation-for="ATContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ADID" class="control-label"></label>
                <select asp-for="ADID" class ="form-control" asp-items="ViewBag.ADID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="發布" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回公告欄</a>
</div>

