@model IEnumerable<OllieShop.ViewModels.VMProductWithSpecification>
@{
    ViewData["Title"] = "Ollie Shop網站首頁";
}
<head>
    <style>
        .FilterSticky {
            position: sticky;
            top:10px;
        }

        .carousel-item {
            height: 600px;
        }

        .BannerCarouselSticky {
            position: sticky;
            top: 10px;
        }

        #mainContent{
            background-image: url('/img/BaseLayoutBackground.jpg');
            background-size:cover;
        }

    </style>
</head>
<div id="mainContent" class="row flex-grow-1 justify-content-center">
    @*篩選功能*@
    <div class="col-xxl-1 d-none d-xxl-block p-0">
        <div class="FilterSticky bg-info border border-2 border-secondary-subtle rounded-end p-1">
            <i class="me-2 bi bi-funnel-fill fs-3 text-black"></i><span class="fs-5 fontBorder text-secondary"><strong>進階篩選</strong></span>
            <div class="form-check border-top border-2 pt-2">
                @{
                    var AllCategorys = ViewData["AllCategorys"] as IEnumerable<dynamic>;
                    int Caculactor = 0;
                    foreach (var item in AllCategorys)
                    {
                        <div class="border-bottom border-secondary">
                            <label class="form-check-label text-light fs-6 container-fluid text-nowrap text-truncate fontBorder" for="flexCheckChecked@(Caculactor)">
                                @item.Name
                            </label>
                            <input class="form-check-input" type="checkbox" value="@(item.CYID)" id="flexCheckChecked@(Caculactor)">
                        </div>
                        Caculactor++;
                    }
                }
            </div>
        </div>
    </div>

    <div class="col-9 container" id="container">
        <!--CardComponentPlacePosition-->
        <div id="productInfoCardsContainer" class="row p-0 d-flex justify-content-between">
            @foreach (var productInfo in Model)
            {
                <div class="col-xl-3 col-xxl-2 col-lg-5 col-md-5 card m-2 p-0 d-flex flex-column PreHiddenItemForCategoryFilter @productInfo.CYID verticalCard" onclick="RedirectToProductPage(@productInfo.PTID)">
                    <img src="@productInfo.Picture" class="card-img-top flex-grow-1 img-fluid">
                    <div class="card-body flex-grow-0">
                        <h5 class="card-title"><strong>@productInfo.Name</strong></h5>
                        <p class="card-text text-truncate">@productInfo.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-xxl-2 col-xl-3 d-none d-xl-block d-flex flex-column p-0">
        <div class="flex-grow-1">
            <!--carouseforBanner-->
                <div class="BannerCarouselSticky">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active" data-bs-interval="6000">
                                <img class="h-100 w-100" src="~/img/banner1.png" />
                            </div>
                            <div class="carousel-item" data-bs-interval="6000">
                                <img class="h-100 w-100" src="~/img/banner2.png" />
                            </div>
                            <div class="carousel-item" data-bs-interval="6000">
                                <img class="h-100 w-100" src="~/img/banner3.png" />
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            <!--carouse-->
        </div>
    </div>
</div>

@section Scripts{
    <script>
        //進階篩選功能
        $(document).ready(function (){
            $('.form-check-input').on('change', function () {
                //將所有卡片隱藏，之後再解除篩選到的種類隱藏狀態
                $('.PreHiddenItemForCategoryFilter').each(function(){
                    $(this).addClass('d-none');
                }); 
                //被選中的checkbox要將value存入的容器
                var selectedCategories = [];
            
                //遍歷所有checkbox，找出checked的目標
                $('.form-check-input').each(function(){
                    if($(this).prop('checked')){
                        selectedCategories.push($(this).val());
                    }
                });
                //有篩選種類的情況才需要局部移除d-none屬性
                if (selectedCategories.length != 0){
                    selectedCategories.forEach(function (item) {
                        $('.' + item).each(function () {
                            $(this).removeClass('d-none');
                        });
                    });
                    return;
                }
                //取消篩選所有選項時，將所有卡片恢復顯示
                $('.PreHiddenItemForCategoryFilter').each(function () {
                    $(this).removeClass('d-none');
                });
            });
        });
        
        function searchProuducts() {
            // Declare variables
            var input, filter, productInfoCardsContainer, cards, strong, i, txtValue;
            input = document.getElementById('searchInput');
            filter = input.value.toUpperCase();
            productInfoCardsContainer = document.getElementById('productInfoCardsContainer');
            cards = productInfoCardsContainer.getElementsByClassName('card');

            // Loop through all list items, and hide those who don't match the search query
            for (i = 0; i < cards.length; i++) {
                strong = cards[i].querySelector("strong");
                txtValue = strong.textContent || strong.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    console.log(cards[i]);
                    cards[i].classList.remove("d-none");
                } else {
                    cards[i].classList.remove("d-none");
                    cards[i].classList.add("d-none");
                }
            }
        }

        breakCacheStoreRuleForDisplayUpdatePhoto(".card-img-top");
    </script>
}
