@model IEnumerable<OllieShop.Models.SellerPaymentMethods>

@{
    ViewData["Title"] = "商家付款方式總覽";
    Layout = "~/Views/Shared/_Layout_Seller.cshtml";
}

<div class="d-flex align-items-center">
    <h1 class="me-auto">@ViewData["Title"]</h1>
    <a class="fs-3" asp-action="OptionsMenu" asp-controller="SellersBackEndPage">返回業者功能選單</a>
</div>
<p>
    <a asp-action="Create" asp-route-SRID="@ViewBag.SRID">新增付款方式</a>
</p>
@if (Model.Count() == 0)
{
    <h1 class="text-info text-center">@ViewData["SellerPaymentMethodsNotBind"]</h1>
    return;
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PM.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Canceled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.PM.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Canceled)
            </td>
            <td>
                @Html.ActionLink("取消綁定", "Edit", new {SRID=item.SRID,PMID=item.PMID,PaymentMethodsName=item.PM.Name})
            </td>
        </tr>
}
    </tbody>
</table>
