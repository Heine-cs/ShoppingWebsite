@model IEnumerable<OllieShop.Models.Admins>

@{
    ViewData["Title"] = "商城管理員清冊";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">新增管理員</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnableDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisableDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnableDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisableDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ADID">編輯</a> |
                <a asp-action="Details" asp-route-id="@item.ADID">完整內容</a> |
                <a asp-action="Delete" asp-route-id="@item.ADID">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
