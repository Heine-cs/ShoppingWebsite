@model OllieShop.Models.Admins

@{
    ViewData["Title"] = "管理員建立";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1></h1>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnableDate" class="control-label"></label>
                <input asp-for="EnableDate" class="form-control" />
                <span asp-validation-for="EnableDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisableDate" class="control-label"></label>
                <input asp-for="DisableDate" class="form-control" />
                <span asp-validation-for="DisableDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="建立" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回管理員清冊</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
