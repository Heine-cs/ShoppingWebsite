@model OllieShop.Models.Violations

@{
    ViewData["Title"] = "審核頁面";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<h4 class="text-danger"></h4>
<div class="alert alert-dismissible alert-warning">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <h4 class="alert-heading">請詳讀以下說明!!</h4>
    <p class="mb-0">提醒您，案件一經審核就無法回復本次操作，審核時請慎重決定</p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VioID" />
            <div class="form-group">
                <label asp-for="Submitter" class="control-label"></label>
                <input asp-for="Submitter" class="form-control" readonly />
                <span asp-validation-for="Submitter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Suspect" class="control-label"></label>
                <input asp-for="Suspect" class="form-control" readonly />
                <span asp-validation-for="Suspect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" readonly/>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmitDate" class="control-label"></label>
                <input asp-for="SubmitDate" class="form-control" readonly/>
                <span asp-validation-for="SubmitDate" class="text-danger"></span>
            </div>
            <div class="d-flex">
                <div class="p-2">
                    停權: @Html.RadioButtonFor(model => model.Disabled,"True",new {id = "disabledTrue"})
                </div>
                <div class="p-2">
                    不停權: @Html.RadioButtonFor(model => model.Disabled,"False",new {id = "disabledFalse"})
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ADID" class="control-label"></label>
                <select asp-for="ADID" class="form-control" asp-items="ViewBag.ADID"></select>
                <span asp-validation-for="ADID" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="請先選擇停權狀態" class="btn btn-outline-grey" id="execute" disabled onclick="return confirm('確定要審核用戶編號為【@Model.Suspect】的用戶嗎?')" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index" class="btn btn-outline-primary">暫時不審核此筆，點我回違規案件列表</a>
</div>
<script>
    const disableRadioButton = document.getElementById("disabledTrue");
    const unDisableRadioButton = document.getElementById("disabledFalse");
    const executeButton = document.getElementById("execute");

    function setExecuteButtonUseable(){
        alert("確定停權狀態後請點下審核按鈕");
        executeButton.value = "審核";
        executeButton.className = "btn btn-outline-danger";
        executeButton.removeAttribute("disabled");
    }

    disableRadioButton.addEventListener("click",function(){
        setExecuteButtonUseable();
    });

    unDisableRadioButton.addEventListener("click", function () {
        setExecuteButtonUseable()
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
