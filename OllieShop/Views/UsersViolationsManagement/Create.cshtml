@model OllieShop.Models.Violations

@{
    ViewData["Title"] = "提交檢舉";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-column container-fluid">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Submitter" class="form-control" value="@ViewBag.SubmitterUserID" />
                <input type="hidden" asp-for="Suspect" class="form-control" value="@ViewBag.SuspectUserID" />
                <h3>本次檢舉對象名稱 : <span class="text-info">@ViewData["SuspectName"]</span></h3>
                <div class="form-group">
                    <label asp-for="Reason" class="control-label"></label>
                    <textarea asp-for="Reason" class="form-control p-1"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubmitDate" class="control-label"></label>
                    <input asp-for="SubmitDate" class="form-control" value="@ViewBag.SubmitDate" readonly />
                    <span asp-validation-for="SubmitDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary my-3" type="submit" value="送出檢舉" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="#" onclick="redirectToPreviousPage(event)">不檢舉，返回上一頁</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function redirectToPreviousPage(event){
            event.preventDefault();
            history.back();
        }
        //欄位按下enter後自動擴張輸入框
        var textarea = document.querySelector('textarea');
        textarea.addEventListener('keydown', autosize);
        function autosize() {
            var el = this;
            setTimeout(function () {
                el.style.cssText = 'height:auto; padding:0';
                el.style.cssText = 'height:' + el.scrollHeight + 'px';
            }, 0);
        }
    </script>
}
