@model OllieShop.Models.Violations

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Violations</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Submitter" class="control-label"></label>
                <select asp-for="Submitter" class ="form-control" asp-items="ViewBag.Submitter"></select>
            </div>
            <div class="form-group">
                <label asp-for="Suspect" class="control-label"></label>
                <select asp-for="Suspect" class ="form-control" asp-items="ViewBag.Suspect"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmitDate" class="control-label"></label>
                <input asp-for="SubmitDate" class="form-control" />
                <span asp-validation-for="SubmitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disabled" class="control-label"></label>
                <input asp-for="Disabled" class="form-control" />
                <span asp-validation-for="Disabled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ADID" class="control-label"></label>
                <select asp-for="ADID" class ="form-control" asp-items="ViewBag.ADID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
