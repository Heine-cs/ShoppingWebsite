@model OllieShop.Models.Violations

@{
    ViewData["Title"] = "取消檢舉";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-column pt-3">
    <h1>@ViewData["Title"]</h1>

    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">請詳讀以下說明!!</h4>
        <p class="mb-0">提醒您，檢舉紀錄一經刪除就無法回復本次操作，刪除時請慎重決定</p>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubmitDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubmitDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disabled)
        </dt>
        <dd class="col-sm-10">
            @{
                var displayTexts = new Dictionary<string, string>{
                    { "True", "停權"},
                    { "False", "不停權"},
                    { "", "尚未裁定"}
                };
            }
            @displayTexts[Model.Disabled.ToString()]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AD)
        </dt>
        <dd class="col-sm-10">
            @{
                string recordAdminHandleStatus = Model.Disabled == null ? "<span class='text-warning fontBorder'>管理員尚未審核完成</span>" : Model.AD.Account;
            }
            @Html.Raw(recordAdminHandleStatus)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VioID" />
        <input type="submit" value="取消" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-URID="@Model.Submitter">返回檢舉提交總覽</a>
    </form>

</div>

