@model OllieShop.Models.CustomerCoupons

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}

<h1>Create</h1>

<h4>CustomerCoupons</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateAdded" class="control-label"></label>
                <input asp-for="DateAdded" class="form-control" value='@ViewData["DateAdded"]' />
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppliedDate" class="control-label"></label>
                <input asp-for="AppliedDate" class="form-control" />
                <span asp-validation-for="AppliedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNID" class="control-label"></label>
                <select asp-for="CNID" class ="form-control" asp-items="ViewBag.CNID"></select>
            </div>
            <div class="form-group">
                <input asp-for="CRID" class ="form-control" asp-items="ViewBag.CRID"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
