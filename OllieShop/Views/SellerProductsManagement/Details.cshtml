@model OllieShop.Models.Products

@{
    ViewData["Title"] = "商品內容";
    Layout = "~/Views/Shared/_Layout_Seller.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
<div class="row">
    <dl class="row col">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryFee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryFee)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LaunchDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LaunchDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hidden)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hidden)
        </dd>
        @if (Model.Locked != false)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Locked)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Locked)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Inquired)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inquired)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Installment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Installment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Unopened)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unopened)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShelfQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShelfQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SoldQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoldQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CY.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CY.Name)
        </dd>
    </dl>
    <div class="col">
        @await Component.InvokeAsync("VCSpecifications" , new{ptid = Model.PTID})
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.PTID">編輯</a> |
    <a asp-action="Index">返回商品總覽</a>
</div>
