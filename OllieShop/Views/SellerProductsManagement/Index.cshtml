@model IEnumerable<OllieShop.ViewModels.VMSellerProductsManagement>

@{
    ViewData["Title"] = "商品總覽";
    Layout = "~/Views/Shared/_Layout_Seller.cshtml";
}
<style>
    .table {
        table-layout: fixed;
    }

    .table tbody tr td{
       height:200px;
    }
</style>
<div class="d-flex align-items-center">
    <h1 class="me-auto">@ViewData["Title"]</h1>
    <a class="fs-3" asp-action="OptionsMenu" asp-controller="SellersBackEndPage">返回業者功能選單</a>
</div>
<p>
    <a asp-action="Create">新增商品</a>
</p>
@if (Model.Count() == 0)
{
    <h1 class="text-info text-center">目前尚未新增任何商品</h1>
    return;
}
<table class="table table-hover align-middle text-center table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hidden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelfQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoldQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LaunchDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    if(item.Locked != true)
        {  
            <tr>
                <td>
                    <img class="w-100 h-100 productImg" src="@Html.DisplayFor(modelItem => item.Picture)"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hidden)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShelfQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoldQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LaunchDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PTID">編輯</a> |
                    <a asp-action="Details" asp-route-id="@item.PTID">完整內容</a> @*|
                    <a asp-action="Delete" asp-route-id="@item.PTID">刪除</a>*@
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td class="bg-danger">
                    <img src="@Html.DisplayFor(modelItem => item.Picture)" width="200" height="200" />
                </td>
                <td class="bg-danger">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="bg-danger">
                    @Html.DisplayFor(modelItem => item.Hidden)
                </td class="bg-danger">

                <td class="bg-danger">
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td class="bg-danger">
                    @Html.DisplayFor(modelItem => item.DeliveryFee)
                </td>
                <td class="bg-danger">
                    @Html.DisplayFor(modelItem => item.ShelfQuantity)
                </td class="bg-danger">
                <td class="bg-danger">
                    @Html.DisplayFor(modelItem => item.SoldQuantity)
                </td>
                <td class="bg-danger">
                    @Html.DisplayFor(modelItem => item.SRID)
                </td>
                <td class="bg-danger">
                    @Html.DisplayFor(modelItem => item.LaunchDate)
                </td>
                <td class="bg-danger">
                    <a asp-action="Details" asp-route-id="@item.PTID">完整內容</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

@section Scripts{
    <script>
        breakCacheStoreRuleForDisplayUpdatePhoto(".productImg");
    </script>
}