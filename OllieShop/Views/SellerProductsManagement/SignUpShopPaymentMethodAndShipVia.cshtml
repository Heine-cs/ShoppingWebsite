@model OllieShop.ViewModels.SignUpShopPaymentMethodAndShipVia
@{
    ViewData["Title"] = "綁定商品交易方式";
    Layout = "~/Views/Shared/_Layout_Seller.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-primary">@ViewData["BindReason"]</h3>
<form asp-action="SignUpShopPaymentMethodAndShipVia">
    @*付款方式*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="sellerShipVia.SRID" value="@ViewBag.SRID" />
    <input type="hidden" asp-for="sellerPaymentMethod.SRID" value="@ViewBag.SRID" />
    <div class="form-group">
        <label asp-for="sellerPaymentMethod" class="control-label"></label>
        <select asp-for="sellerPaymentMethod.PMID" class="form-control" asp-items="@ViewBag.PMInfo"></select>
    </div>
    @*運送方式*@
    <div class="form-group">
        <label asp-for="sellerShipVia" class="control-label"></label>
        <select asp-for="sellerShipVia.SVID" class="form-control" asp-items="@ViewBag.SVInfo"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="綁定" class="btn btn-primary my-3" />
    </div>
</form>

<a class="fs-3" asp-action="Index" asp-route-SRID="@ViewBag.SRID">暫時不新增，返回商品總覽</a>

