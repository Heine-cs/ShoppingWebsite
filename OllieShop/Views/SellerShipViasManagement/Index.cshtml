@model IEnumerable<OllieShop.Models.SellerShipVias>

@{
    ViewData["Title"] = "賣家運送方式總覽";
    Layout = "~/Views/Shared/_Layout_Seller.cshtml";
}

<div class="d-flex align-items-center">
    <h1 class="me-auto">@ViewData["Title"]</h1>
    <a asp-action="OptionsMenu" asp-controller="SellersBackEndPage">返回業者功能選單</a>
</div>

@if (Model.Count() == 0)
{
    <h2 class="text-info">@ViewData["SellerShipViasNotBind"]</h2>
    <p>
        <a asp-action="Create" asp-route-SRID="@ViewBag.SRID">新增付款方式</a>
    </p>
    return;
}
<p>
    <a asp-action="Create" asp-route-SRID="@ViewBag.SRID">新增運送方式</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShipVias.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Canceled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShipVias.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Canceled)
            </td>

            <td>
                @Html.ActionLink("取消綁定", "Edit", new { SRID=item.SRID,SVID=item.SVID,ShipViasName=item.ShipVias.Name})
            </td>
        </tr>
}
    </tbody>
</table>
